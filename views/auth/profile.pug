extends ../layout

block content
  main.col-md-9.ms-sm-auto.col-lg-10.px-md-4 
    .d-flex.justify-content-between.flex-wrap.flex-md-nowrap.align-items-center.pt-3.pb-2.mb-3.border-bottom
      h1 #{title} 
    
    p #[strong Username:] #{user.username}
    p #[strong Full Name:] #{user.fullname}
    p #[strong E-mail:] #{user.email}
    p #[strong Role:] 
      if (user.role==0)
        | User
      else if (user.role==1)
        | Editor
      else if (user.role==2)
        | Admin

    hr
    p
      a(href=user.url+'/update').btn.btn-primary Update User